@using VehicleRentalProject.Web.Models.ViewModels.Vehicle;
@model EditVehicleViewModel
@{
    ViewData["Title"] = "Edit";
}

<div class="container">
    <h2>Add New Vehicle</h2>
    <hr />

    <form asp-action="Create" asp-controller="Vehicle" enctype="multipart/form-data">
        <div class="row">
            <div class="col-md-4">
                <div class="form-group">
                    <input type="hidden" asp-for="Id" name="Id" />
                    <label for="VehicleName">Vehicle Name :</label>
                    <input type="text" class="form-control" asp-for="VehicleName" required />
                </div>
                <div class="form-group">
                    <label for="VehicleType">Vehicle Type :</label>
                    <input type="text" class="form-control" asp-for="VehicleType" required />
                </div>
                <div class="form-group">
                    <label for="VehicleModel">Vehicle Model :</label>
                    <input type="text" class="form-control" asp-for="VehicleModel" required />
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="VehicleNumber">Vehicle Number :</label>
                    <input type="text" class="form-control" asp-for="VehicleNumber" required />
                </div>
                <div class="form-group">
                    <label for="VehicleColor">Vehicle Color :</label>
                    <input type="text" class="form-control" asp-for="VehicleColor" required />
                </div>
                <div class="form-group">
                    <label for="VehicleDescription">Vehicle Description :</label>
                    <textarea class="form-control" asp-for="VehicleDescription" rows="3" required></textarea>
                </div>
            </div>
            <div class="col-md-4">
                <div class="form-group">
                    <label for="VehicleImageUrl">Vehicle Image :</label>
                    <input type="file" class="form-control-file" id="VehicleImageUrl" name="VehicleImageUrl" />
                </div>
                <div class="form-group">
                    <label for="VehiclePrice">Vehicle Price :</label>
                    <input type="number" class="form-control" asp-for="VehiclePrice" required />
                </div>
                <div class="form-group">
                    <label for="DailyRate">Daily Rate :</label>
                    <input type="number" class="form-control" asp-for="DailyRate" required />
                </div>
                <div class="form-check">
                    <input type="checkbox" class="form-check-input" asp-for="IsAvailable" />
                    <label class="form-check-label" for="IsAvailable">Is Available</label>
                </div>
            </div>
        </div>
        <br />
        <div class="text-center">
            <button type="submit" class="btn btn-primary">Create</button>
            <a asp-action="Index" asp-controller="Vehicles" class="btn btn-secondary">Back</a>
        </div>
    </form>
</div>
